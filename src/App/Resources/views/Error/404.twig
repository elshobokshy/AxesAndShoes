{% extends 'layout.twig' %}

{% block title %}{{ parent() }} - Page not found{% endblock %}

{% block body %}

    <div class="container">

        <div class="col-md-12">

            <div class="row" id="error-page">
                <div class="col-sm-6 col-sm-offset-3">
                    <div class="box">

                    <p class="text-center">
                        <img src="{{ asset('img/logo.png') }}" alt="Obaju">
                    </p>

                    <h3>We are sorry - this page is not here anymore or never existed</h3>
                    <h4 class="text-muted">Error 404 - Page not found</h4>

                    <p class="text-center">To continue please use the <strong>Search form</strong> or <strong>Menu</strong> above.</p>

                    <p class="buttons"><a href="{{ path_for('home') }}" class="btn btn-primary"><i class="fa fa-home"></i> Go to Homepage</a>
                    </p>
                    </div>
                </div>
            </div>


        </div>
        <!-- /.col-md-9 -->
    </div>
    <!-- /.container -->

{% endblock %}