{% extends 'layout.twig' %}

{% block title %}- Profile{% endblock %}

{% block body %}

<div class="container">

    <div class="col-md-3">
        <!-- *** CUSTOMER MENU ***
    _________________________________________________________ -->
        <div class="panel panel-default sidebar-menu">

            <div class="panel-heading">
                <h3 class="panel-title">Customer section</h3>
            </div>

            <div class="panel-body">
                <ul class="nav nav-pills nav-stacked">
                    <li>
                        <a href="{{ path_for('dashboard') }}"><i class="fa fa-list"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="{{ path_for('profile') }}"><i class="fa fa-user"></i> My account</a>
                    </li>
                    <li>
                        <a href="{{ path_for('logout') }}"><i class="fa fa-sign-out"></i> Logout</a>
                    </li>
                </ul>
            </div>

        </div>
        <!-- /.col-md-3 -->

        <!-- *** CUSTOMER MENU END *** -->
    </div>

    <div class="col-md-9">
        <div class="box">
            <h1>My account</h1>
            <p class="lead">Check your personal details here.</p>

            <h3>Change password</h3>

            <form action="{{ path_for('profile') }}" method="POST">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="password_old">Old password</label>
                            <input type="password" name="password_old" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="password">New password</label>
                            <input type="password" name="password" class="form-control">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="password_confirm">Retype new password</label>
                            <input type="password" name="password_confirm" class="form-control">
                        </div>
                    </div>
                </div>
                <!-- /.row -->

                <div class="col-sm-12 text-center">
                    {{ csrf() }}
                    <button type="submit" name="change_pw" class="btn btn-primary"><i class="fa fa-save"></i> Save new password</button>
                </div>
            </form>

            <hr>

            <h3>Personal details</h3>
            <form action="{{ path_for('profile') }}" method="POST" >
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="firstname">First name</label>
                            <input type="text" class="form-control editInputs" name="first_name" id="firstname" value="{{ auth.user.first_name }}" disabled>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="lastname">Last name</label>
                            <input type="text" class="form-control editInputs" name="last_name" id="lastname" value="{{ auth.user.last_name }}" disabled>
                        </div>
                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control editInputs" name="email" id="email" value="{{ auth.user.email }}" disabled>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="birthdate">Birthdate</label>
                            <input type="text" class="form-control editInputs" name="birthdate" id="birthdate" value="{{ auth.user.birthdate }}" disabled>
                        </div>
                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="city">City</label>
                            <input type="text" class="form-control editInputs" name="city" id="city" value="{{ auth.user.city }}" disabled>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="country">Country</label>
                            <input type="text" class="form-control editInputs" name="country"  id="country" value="{{ auth.user.country }}" disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-offset-4 col-sm-4">
                        <div class="text-center">
                            <input id="editProfile" type="button" class="btn btn-primary" value="Edit" onclick="edit();"/>
                            {{ csrf() }}
                            <button type="submit" name="change_details" class="btn btn-primary editInputs" value="Submit" disabled="">Submit <i class="fa fa-user-md"></i></button>
                        </div>
                    </div>
                </div>
                {% if has_errors() %}
                    <div class="alert alert-warning">
                        {% for paramErrors in errors() %}
                            {% for error in paramErrors %}
                                <p>{{ error }}</p>
                            {% endfor %}
                        {% endfor %}
                    </div>
                {% endif %}
            </form>
        </div>
    </div>

</div>
<!-- /.container -->

{% endblock %}
