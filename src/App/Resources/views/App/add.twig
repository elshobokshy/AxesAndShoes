{% extends 'layout.twig' %}

{% block title %}{{ parent() }} - Add{% endblock %}

{% block body %}

<div class="container">

                <div class="col-sm-offset-3 col-md-6">
                    <div class="box">
                        <h1>Put to rent</h1>

                        <p class="lead">Submit this form to put a product to rent.</p>
                        <hr>

                        <form action="{{ path_for('add') }}" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" name="title" class="form-control" value="{{ val('title') }}">
                            </div>
                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea name="description" class="form-control">{{ val('description') }}</textarea>
                            </div>
                            <div class="form-group">
                                <label for="size">Size</label>
                                <input type="number" name="size" class="form-control" value="{{ val('size') }}">
                            </div>
                            <div class="form-group">
                                <label for="waterproof">Waterproof</label> <br>
                                <label class="radio-inline">
                                <input type="radio" name="waterproof" value="Yes">Yes</label>
                                <label class="radio-inline">
                                <input type="radio" name="waterproof" value="No">No</label>
                            </div>
                            <div class="form-group">
                                <label for="price">Price</label>
                                <input type="number" name="price" class="form-control" value="{{ val('price') }}">
                            </div>
                            <div class="form-group">
                                <label for="color">Color : </label>
                                <select name="color">
                                    {% for color in colors %}
                                        <option value="{{ color.colorName }}">{{ color.colorName }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="material">Material : </label>
                                <select name="material">
                                    {% for material in materials %}
                                        <option value="{{ material.materialName }}">{{ material.materialName }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="image">Images : </label>
                                <input type="file" name="image[]" multiple="multiple"/><br/>
                            </div>
                            <div class="text-center">
                                {{ csrf() }}
                                <button type="submit" class="btn btn-primary" value="Submit">Submit <i class="fa fa-user-md"></i></button>
                            </div>
                            {% if has_errors() %}
                                <div class="alert alert-warning">
                                    {% for paramErrors in errors() %}
                                        {% for error in paramErrors %}
                                            <p>{{ error }}</p>
                                        {% endfor %}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </form>
                    </div>
                </div>

            </div>
            <!-- /.container -->
{% endblock %}