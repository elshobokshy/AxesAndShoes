{% extends 'layout.twig' %}

{% block body %}

    <form action="{{ path_for('search') }}" method="POST">
        <input type="text" class="form-control" placeholder="Search" name="search">
        {{ csrf() }}
        <button type="submit" class="btn btn-default">Submit</button>
    </form>

    <div class="row">
        {% for p in products %}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ asset( p.img ) }}" alt="...">
                    <div class="caption">
                        <h3>{{ p.title }}</h3>
                        <p>{{ p.price }}â‚¬</p>
                        <p>
                            <a href="/detail/{{ p.id }}" class="btn btn-success" role="button">See product's details</a>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    
{% endblock %}